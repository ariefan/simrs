ALTER TABLE `rsberau`.`rm_tindakan` ADD COLUMN `tarif_tindakan_id` VARCHAR(20) NULL AFTER `tindakan_cd`; 
ALTER TABLE `rsberau`.`rm_tindakan` ADD FOREIGN KEY (`tarif_tindakan_id`) REFERENCES `rsberau`.`tarif_tindakan`(`tarif_tindakan_id`); 
ALTER TABLE `rsberau`.`rm_tindakan` CHANGE `tarif_tindakan_id` `tarif_id` VARCHAR(20); 
ALTER TABLE `rsberau`.`rm_tindakan` DROP COLUMN `tarif_tindakan_id`; 

ALTER TABLE `rsberau`.`bayar_lab` ADD COLUMN `jumlah` INT(11) NULL AFTER `nama_lab`; 
ALTER TABLE `rsberau`.`bayar_rad` ADD COLUMN `jumlah` INT(11) NULL AFTER `nama_rad`; 

ALTER TABLE `rsberau`.`rm_lab` ADD COLUMN `tarif_id` VARCHAR(10) NULL AFTER `jumlah`, ADD FOREIGN KEY (`tarif_id`) REFERENCES `rsberau`.`tarif_unitmedis`(`tarif_unitmedis_id`); 
ALTER TABLE `rsberau`.`rm_rad` ADD COLUMN `tarif_id` VARCHAR(10) NULL AFTER `jumlah`, ADD FOREIGN KEY (`tarif_id`) REFERENCES `rsberau`.`tarif_unitmedis`(`tarif_unitmedis_id`); 
ALTER TABLE `rsberau`.`rm_rad` ADD COLUMN `hasil_file` TEXT NULL AFTER `tarif_id`; 
ALTER TABLE `rsberau`.`rm_lab` ADD COLUMN `hasil_file` TEXT NULL AFTER `tarif_id`;
 
ALTER TABLE `rsberau`.`bayar_obat` CHANGE `obat_id` `obat_id` VARCHAR(20) NULL; 

UPDATE 
  rm_tindakan 
  JOIN tarif_tindakan 
    ON tindakan_cd = treatment_cd 
    SET rm_tindakan.`tarif_id` = tarif_tindakan.`tarif_tindakan_id`;

UPDATE 
  rm_lab
  JOIN tarif_unitmedis 
    USING (medicalunit_cd)
    SET rm_lab.`tarif_id` = tarif_unitmedis.`tarif_unitmedis_id`;
    
UPDATE 
  rm_rad
  JOIN tarif_unitmedis 
    USING (medicalunit_cd)
    SET rm_rad.`tarif_id` = tarif_unitmedis.`tarif_unitmedis_id`;